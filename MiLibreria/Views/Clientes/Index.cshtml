@model IEnumerable<MiLibreria.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>CLIENTES</h1>
<p>
    <a class="btn btn-primary" asp-action="Create">Crear nuevo</a>
</p>

<form  method="get">
    <label for="DNI cliente">Número de Identificacion:</label>
    <input type="text" name="DNI" required />
    <button type="submit">Buscar</button>
</form>

@if (Model != null && Model.Any() )
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DNI)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DNI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.ClienteId">Editar</a> |
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.ClienteId">Detalle</a> |
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ClienteId">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron libros para mostrar.</p>
}





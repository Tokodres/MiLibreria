@model MiLibreria.ViewModels.VentaDetalleViewModel

<div class="container">
    <h2 class="mb-4">Registrar Nueva Venta</h2>

    <form asp-action="Create" asp-controller="Ventas" method="post" id="ventaForm">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <!-- Sección de Datos Principales -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Datos de la Venta</h5>
            </div>
            <div class="card-body">
                <div class="row">  


                    <div class="col-md-4 mb-3">
                        <label asp-for="NumeroFactura" class="form-label required">Número de Factura</label>
                        <input asp-for="NumeroFactura" class="form-control" required />
                        <span asp-validation-for="NumeroFactura" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="FechaVenta" class="form-label required">Fecha</label>
                        <input asp-for="FechaVenta" class="form-control" type="date" required
                               value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="FechaVenta" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="MetodoPago" class="form-label required">Método de Pago</label>
                        <select asp-for="MetodoPago" class="form-select" required>
                            <option value="">Seleccione método de pago</option>
                            <option value="Efectivo">Efectivo</option>
                            <option value="Tarjeta">Tarjeta</option>
                            <option value="Transferencia">Transferencia</option>
                        </select>
                        <span asp-validation-for="MetodoPago" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="ClienteId" class="form-label required">Cliente</label>
                        <select asp-for="ClienteId"
                                asp-items="@(new SelectList(Model.Clientes, "ClienteId", "Nombre"))"
                                class="form-select"
                                required>
                            <option value="">Seleccione un cliente</option>
                        </select>
                        <span asp-validation-for="ClienteId" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sección de Detalles -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Detalle de Productos</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="LibroId" class="form-label">Libro</label>
                        <select id="LibroId" class="form-select">
                            <option value="">Seleccione un libro</option>
                            @foreach (var libro in Model.Libros)
                            {
                                <option value="@libro.LibroId"
                                        data-precio="@libro.PrecioVenta"
                                        data-stock="@libro.Stock">
                                    @libro.Titulo
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label for="Cantidad" class="form-label">Cantidad</label>
                        <input type="number" id="Cantidad" class="form-control" min="1" />
                        <small class="text-muted" id="stockDisponible"></small>
                    </div>

                    <div class="col-md-3">
                        <label for="PrecioUnitario" class="form-label">Precio Unitario</label>
                        <input type="number" id="PrecioUnitario" class="form-control" min="0.01" step="0.01" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">&nbsp;</label>
                        <button type="button" class="btn btn-success w-100" id="btnAdicionar">
                            <i class="bi bi-plus-circle"></i> Agregar Producto
                        </button>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="tablaDetalles">
                        <thead class="table-light">
                            <tr>
                                <th>Libro</th>
                                <th class="text-center">Cantidad</th>
                                <th class="text-end">Precio Unit.</th>
                                <th class="text-end">Subtotal</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="detalleTabla">
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                <td class="text-end">
                                    <strong>$ <span id="totalVenta">0.00</span></strong>
                                </td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

               
                <div id="detallesVentaContainer"></div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary" id="btnGuardar">
                    <i class="bi bi-save"></i> Guardar Venta
                </button>
                <td>
                   
                    <a asp-action="Consultar" class="btn btn-secondary"> Consultar venta </a>

                </td>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const detallesVenta = [];
            let contadorDetalles = 0;

            // Elementos del DOM
            const libroSelect = document.getElementById('LibroId');
            const cantidadInput = document.getElementById('Cantidad');
            const precioInput = document.getElementById('PrecioUnitario');
            const stockSpan = document.getElementById('stockDisponible');
            const btnAdicionar = document.getElementById('btnAdicionar');
            const detalleTabla = document.getElementById('detalleTabla');
            const totalVentaSpan = document.getElementById('totalVenta');
            const detallesContainer = document.getElementById('detallesVentaContainer');
            const form = document.getElementById('ventaForm');

            // Event Listeners
            libroSelect.addEventListener('change', actualizarPrecioYStock);
            btnAdicionar.addEventListener('click', agregarDetalle);
            form.addEventListener('submit', validarFormulario);

            function actualizarPrecioYStock() {
                const option = libroSelect.selectedOptions[0];
                if (option.value) {
                    const precio = option.dataset.precio;
                    const stock = option.dataset.stock;
                    precioInput.value = precio;
                    stockSpan.textContent = `Stock disponible: ${stock}`;
                    cantidadInput.max = stock;
                } else {
                    precioInput.value = '';
                    stockSpan.textContent = '';
                    cantidadInput.max = '';
                }
            }

            function agregarDetalle() {
                // Validaciones
                if (!validarCamposDetalle()) return;

                const libro = libroSelect.selectedOptions[0];
                const cantidad = parseInt(cantidadInput.value);
                const precio = parseFloat(precioInput.value);
                const subtotal = cantidad * precio;

                // Crear objeto detalle
                const detalle = {
                    libroId: libro.value,
                    cantidad: cantidad,
                    precioUnitario: precio,
                    subtotal: subtotal
                };

                // Agregar a la colección
                detallesVenta.push(detalle);

                // Agregar fila a la tabla
                const fila = document.createElement('tr');
                fila.innerHTML = `
                                    <td>${libro.text}</td>
                                    <td class="text-center">${cantidad}</td>
                                    <td class="text-end">$ ${precio.toFixed(2)}</td>
                                    <td class="text-end">$ ${subtotal.toFixed(2)}</td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-danger btn-sm"
                                                onclick="eliminarDetalle(${contadorDetalles})">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                    <input type="hidden" name="DetallesVenta[${contadorDetalles}].LibroId" value="${libro.value}">
                                    <input type="hidden" name="DetallesVenta[${contadorDetalles}].Cantidad" value="${cantidad}">
                                    <input type="hidden" name="DetallesVenta[${contadorDetalles}].PrecioUnitario" value="${precio}">
                                `;

                detalleTabla.appendChild(fila);
                contadorDetalles++;

                actualizarTotal();
                limpiarCamposDetalle();
            }

            function validarCamposDetalle() {
                if (!libroSelect.value) {
                    alert('Seleccione un libro');
                    libroSelect.focus();
                    return false;
                }

                const cantidad = parseInt(cantidadInput.value);
                const stock = parseInt(libroSelect.selectedOptions[0].dataset.stock);

                if (!cantidad || cantidad < 1) {
                    alert('Ingrese una cantidad válida');
                    cantidadInput.focus();
                    return false;
                }

                if (cantidad > stock) {
                    alert('La cantidad supera el stock disponible');
                    cantidadInput.focus();
                    return false;
                }

                return true;
            }

            function limpiarCamposDetalle() {
                libroSelect.value = '';
                cantidadInput.value = '';
                precioInput.value = '';
                stockSpan.textContent = '';
            }

            function actualizarTotal() {
                const total = detallesVenta.reduce((sum, detalle) => sum + detalle.subtotal, 0);
                totalVentaSpan.textContent = total.toFixed(2);
            }

            window.eliminarDetalle = function (index) {
                detallesVenta.splice(index, 1);
                detalleTabla.removeChild(detalleTabla.children[index]);
                actualizarTotal();
            };

            function validarFormulario(e) {
                if (detallesVenta.length === 0) {
                    e.preventDefault();
                    alert('Debe agregar al menos un producto a la venta');
                    return false;
                }
                return true;
            }
        });
    </script>

    <style>
        .required::after {
            content: " *";
            color: red;
        }

        .table th {
            background-color: #f8f9fa;
        }
    </style>
}


